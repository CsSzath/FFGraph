<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="480.0" minWidth="640.0" onKeyPressed="#clearErrorLabel" onMouseExited="#clearErrorLabel" prefHeight="768.0" prefWidth="1024.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thau.ffgraph.FFGraphController">
   <children>
      <Label text="Hőkezelés Grafikus Kiértékelő">
         <font>
            <Font name="Arial Bold" size="32.0" />
         </font>
      </Label>
      <HBox spacing="5.0">
         <children>
            <Button fx:id="switchToSecondary" mnemonicParsing="false" onAction="#switchToSecondary" text="Új termék beolvasása" />
            <Button fx:id="btnExport" mnemonicParsing="false" onAction="#exportData" text="Adatbázis Export" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#exitApp" text="Kilépés" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Megrendelő:" />
                  <ComboBox fx:id="selectCompanyName" onAction="#companyChosen" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="NEVER">
               <children>
                  <Label text="Berendezés azonosító:" />
                  <ComboBox fx:id="selectMachineId" onAction="#machineChosen" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Termék neve:" />
                  <ComboBox fx:id="selectProductName" onAction="#productChosen" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Hőkezelés kezdete:" />
                  <ComboBox fx:id="selectDateTime" onAction="#dateTimeChosen" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox>
         <children>
            <Label fx:id="lblError" text="Error Label" textFill="RED" />
         </children>
      </VBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="970.0">
               <children>
                  <LineChart fx:id="chtTemperature" animated="false" axisSortingPolicy="NONE" createSymbols="false" legendSide="TOP" minHeight="400.0" minWidth="700.0" prefHeight="400.0" title="Hőmérséklet">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
                  <HBox fx:id="barSteps" maxHeight="30.0" minHeight="30.0" prefHeight="30.0">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="45.0" />
                     </padding>
                  </HBox>
                  <LineChart fx:id="chtHumidity" animated="false" axisSortingPolicy="NONE" createSymbols="false" legendSide="TOP" minHeight="300.0" minWidth="700.0" prefHeight="400.0" title="Páratartalom">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
